.coupon {
  background: #fff;
  margin-bottom: 32rpx;
  padding:48rpx 46rpx;
  border-radius: 4px;
  box-shadow: 0 2px 28px 0 rgba(0, 0, 0, 0.06);
  border: solid 1px #e9e9e9;
}

.basic-info {
  border-bottom: 6px solid #D84137;
  padding-bottom: 54rpx;
  justify-content: space-between;
}

.title-value {
  display: flex;
  align-items: start;
}

.coupon-value {
  flex: 5;
}

.coupon-title {
  text-align: right;
  flex: 3;
}

.title-image {
  width: 180rpx;
  height: 100rpx;
}

.promotion-coupon .title {
	font-size: 30rpx;
	font-weight: 600;
	line-height: 1.35;
	letter-spacing: -0.5px;
}

.coupon-value .chinese {
  font-size: 26px;
  font-weight: 600;
  letter-spacing: -0.8px;
  margin-bottom: 28rpx;
}

.coupon-value .english {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: -0.3px;
  text-transform: uppercase;
}

.basic-info .detail {
  margin-top: 28rpx;
  opacity: 0.5;
	font-size: 24rpx;
	letter-spacing: -0.3px;
}

.expiry-date {
  margin-top: 54rpx;
  margin-bottom: 50rpx;
}

.expiry-date {
  text-align: left;
}

.info-item__title {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.info-item__value {
  font-size: 32rpx;
}

.barcode {
  width: 100%;
}

.left-right-layout {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.up-bottom-layout {
  display: flex;
  flex-direction: column;
}
