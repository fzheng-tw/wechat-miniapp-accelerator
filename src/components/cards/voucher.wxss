.voucher {
  background: #fff;
  padding: 48rpx 46rpx;
  margin-bottom: 32rpx;
  border-radius: 4px;
  box-shadow: 0 2px 28px 0 rgba(0, 0, 0, 0.06);
	border: solid 1px #e9e9e9;
}

.voucher-value {
  align-items: flex-start;
  padding-bottom: 54rpx;
  border-bottom: 6px solid #D84137;
}

.available-balance {
  font-size: 72rpx;
  font-weight: 600;
}

.current-balance {
  text-align: right;
  line-height: 1.4;
}

.current-balance .title {
  font-size: 26rpx;
}

.current-balance .value {
  font-size: 36rpx;
}

.card-info {
  margin-top: 76rpx;
  margin-bottom: 50rpx;
}

.expiry-date {
  text-align: left;
}

.pin {
  text-align: right;
}

.info-item__title {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.info-item__value {
  font-size: 32rpx;
}

.barcode {
  width: 100%;
}

.card-number {
  display: block;
  text-align: center;
  font-size: 28rpx;
  letter-spacing: 5px;
  margin-top: 16rpx;
}

.limitation {
  font-size: 24rpx;
  color: #888;
  margin-top: 50rpx;
}

.left-right-layout {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.up-bottom-layout {
  display: flex;
  flex-direction: column;
}
