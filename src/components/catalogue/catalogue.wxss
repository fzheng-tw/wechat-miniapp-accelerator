.categories {
    margin: 0 76rpx 0 32rpx;
}

.line {
    height: 1px;
    background-color: #f3f3f3;
}

.nav {
    position: fixed;
    top: 175rpx;
    bottom: 175rpx;
    right: 20rpx;
    width: 50rpx;
    font-size: 24rpx;
    line-height: 1.42;
    color: #ec5932;
    font-weight: bold;
}

.nav text {
    display: block;
    text-align: center;
}



.category {
    margin-bottom: 70rpx;
}

.category .item {
    padding: 18rpx 0;
    font-size: 18px;
    height: 42rpx;
    line-height: 42rpx;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 32rpx;
}

.category .label {
    font-size: 72rpx;
    font-weight: bold;
    padding-left: 32rpx;
    letter-spacing: 6rpx;
}

.category .label-line {
    height: 3px;
    opacity: 0.34;
    border-bottom: solid 1px #979797;
    margin-bottom: 44rpx;
}

.navigator-hover {
    color: #000;
    background: #f5f5f5;
}
